{
  "name": "e-commerce",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint --fix .",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,cjs,mjs,json,md,mdx,html,css}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,cjs,mjs,json,md,mdx,html,css}\" --cache",
    "check": "pnpm lint && pnpm format:check",
    "precommit": "lint-staged",
    "prepare": "husky",
    "db:generate": "dotenv drizzle-kit generate:mysql",
    "db:push": "dotenv drizzle-kit push:mysql",
    "db:introspect": "dotenv drizzle-kit introspect:mysql",
    "db:studio": "dotenv drizzle-kit studio"
  },
  "lint-staged": {
    "*.{ts,tsx,js,cjs,mjs,json,md,mdx,html,css}": [
      "pnpm check"
    ]
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@t3-oss/env-nextjs": "^0.8.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.29.3",
    "next": "14.1.0",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/eslint": "^8.56.2",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.54",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.17",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-tailwindcss": "^3.14.1",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.34",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}
